<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loarang" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/component_green</item>
        <item name="colorPrimaryContainer">@color/component_green</item>
        <item name="colorSecondaryContainer">@color/main_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_grey</item>
        <item name="android:navigationBarColor">@color/background_list_item</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@color/main_green</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="S">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@drawable/icon_main</item>
    </style>
</resources>